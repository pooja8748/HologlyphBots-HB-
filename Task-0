#!/bin/bash

# Ubuntu 22.04.3 LTS Installation
# Download link: <provide_download_link>
# Follow the installation guide at <installation_guide_link>

# ROS 2 Humble Installation
# Follow the ROS 2 installation guide provided
# Reference: https://docs.ros.org/en/humble/Installation/Linux-Install-Debians.html

# Upgrade system
sudo apt update
sudo apt upgrade -y

# Set locale
locale  # check for UTF-8
sudo apt install locales
sudo locale-gen en_US en_US.UTF-8
sudo update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8
export LANG=en_US.UTF-8
locale  # verify settings

# Setup Sources
sudo apt install software-properties-common
sudo add-apt-repository universe

# Add ROS 2 GPG key
sudo apt update && sudo apt install curl -y
sudo curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg

# Add ROS 2 repository to sources list
echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(. /etc/os-release && echo $UBUNTU_CODENAME) main" | sudo tee /etc/apt/sources.list.d/ros2.list > /dev/null

# Install ROS 2 packages
sudo apt update
sudo apt install ros-humble-desktop -y

# Environment setup
echo "source /opt/ros/humble/setup.bash" >> ~/.bashrc
source ~/.bashrc

# Gazebo Installation
sudo apt install ros-humble-gazebo-ros -y
sudo apt install ros-humble-gazebo-plugins -y

# Additional setup or configuration steps if needed

# Clone your ROS project repository
# git clone <your_repository_url>

# Navigate to the repository directory
# cd <repository_directory>

# Build your ROS packages (if needed)
# colcon build

# Source the setup file
# source install/setup.bash

# Run your ROS nodes or simulations

# End of script
